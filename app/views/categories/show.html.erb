<div class="p-4 sm:ml-64">
  <div class=" flex justify-between top-0 right-0 m-4">
    <h1 class="text-3xl font-medium">Category : <%= @category.name %></h1>
  </div>
  <div>
      <% if @products.count != 0 %>
        <div class="bg-white">
          <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl">
            <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
              <% @products.each do |product| %>
                <div class="group relative rounded-2xl bg-slate-300 ">
                  <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-2xl border-solid border-2 bg-gray-200 lg:aspect-none group-hover:opacity-75 lg:h-80">
                    <% if product.image.attached? %>
                      <%= image_tag product.image, class: "h-full w-full object-cover object-center lg:h-full lg:w-full rounded-2xl"%>
                    <% else %>
                      <img src="https://t4.ftcdn.net/jpg/04/73/25/49/360_F_473254957_bxG9yf4ly7OBO5I0O5KABlN930GwaMQz.jpg" class=" h-full w-full object-cover object-center lg:h-full lg:w-full rounded-2xl">
                    <% end %>
                  </div>
                  <div class="mt-4 flex justify-between px-4 pb-4">
                    <div>
                      <h3 class="text-sm font-medium text-gray-700">
                        <a href="/products">
                          <span aria-hidden="true" class="absolute inset-0"></span>
                          <%= product.name %>
                        </a>
                      </h3>
                      <p class="mt-1 text-sm text-gray-500"><%= product.description %></p>
                    </div>
                    <p class="text-sm font-medium text-gray-900">$<%= product.price %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
  </div>
