<%= form_with model: product, local: true do |form| %>
  <div class="p-4 sm:ml-64">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold"><%= product.new_record? ? 'Create New Product' : 'Edit Product' %></h2>
      <%= form.submit product.new_record? ? 'Create' : 'Update', class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" %>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
        <%= form.label :name, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" do %>
          Product Name
        <% end %>
        <%= form.text_field :name, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", placeholder: "Product Name" %>
      </div>
      <div class="w-full md:w-1/2 px-3">
        <%= form.label :price, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" do %>
          Product Price
        <% end %>
        <%= form.number_field :price, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", placeholder: "Product Price" %>
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
        <%= form.label :description, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" do %>
          Product Description
        <% end %>
        <%= form.text_area :description, class: "no-resize appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 h-48 resize-none", placeholder: "Product Description" %>
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
        <div class="field">
          <%= form.label :category_ids, 'Categories' %>
          <%= form.collection_select :category_ids, @categories, :id, :name, {}, multiple: true %>
        </div>
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
        <%= form.label :image, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" do %>
          Product Image
        <% end %>
        <%= form.file_field :image, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
      </div>
    </div>
  </div>
<% end %>
